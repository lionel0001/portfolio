@import '_settings'
@import 'jeet'

normalize-css()
base()
// edit(red)

projectBoxWidth = 466px
projectBoxHeight = 250px

containerMarginLeftXL = 100px
containerMarginRightXL = 100px

containerMarginLeftL = 80px
containerMarginRightL = 80px
containerMargins = containerMarginLeftL  + containerMarginRightL
txtMediumCopy = 0.9375rem

containerMarginLeftS = 20px
containerMarginRightS = 20px
containerMarginsS = containerMarginLeftS + containerMarginRightS
txtSmallCopy = 0.875rem
// txtSmallLineHeigh = 

// containerWidth = 1060px
containerWidth = 960px

bpMedium = containerMarginLeftXL + containerMarginRightXL + containerWidth
bpSmall = 768px


bgcolor = #ECECEC
greyDark = #424242
greyMedium = #767676
greyLight = #9E9E9E
blueDark = #488FC7
blueLight = #C1DEFF
greyUltraLight = #ECECEC

*
   padding:0px
   margin:0px

body
   background-color: #969696   
   font-family: fira
   
   -webkit-font-smoothing: antialiased
   -moz-osx-font-smoothing: grayscale
   
   +below(bpMedium)
      font-size: txtMediumCopy

   +below(bpSmall)
      font-size: txtSmallCopy

p
   font-weight:400
   line-height: 1.3rem
   padding-bottom: 1.3rem
 
   .inlineTitle
      font-weight:500

a
   color: greyDark
   text-decoration:underline
       
a:hover
   color: blueDark   


ul
   padding-bottom:1.3rem

   li
      line-height:1.3rem

 
h1
   font-size: 1.75rem
   margin:0px
   font-weight:400
   color: greyDark
   
   +below(bpSmall)
      font-size: 1.5rem
      line-height:1.9rem
      padding: 5px 0px   


h2
   font-size: 1.5rem
   margin:0px
   font-weight:400
   color: greyDark
   
   // +below(bpSmall)
   line-height:1.9rem
   padding: 1.3rem 0px  


h3
   font-size: 1rem
   font-weight:400
   color: greyDark
   line-height: 1.65rem
    
   +below(bpSmall)
      line-height:1.3rem
    
   .bold
      font-weight:500

   .slogan
      font-weight:400
      font-style:italic
    
   .status
      font-weight:400
      color: greyMedium
    
   .blue
      font-weight:400
      color: blueDark
    
   .projectSubtitle
      font-weight:400
      font-style:italic
      color: greyMedium

   .projectYear
      font-weight:400
      color: greyLight

h4
   font-weight:500
   line-height: 1.3rem
   
   .onlyMobile 
      display:block
      +below(bpSmall)
         display:none
         
   .borderTop
      +below(bpSmall)
         display:block
         margin-top:5px
         padding-top:5px
         border-top: 1px solid greyDark
      
.basicRespImage
   +below(bpMedium)
      width:90%
   +below(bpSmall)
      width:100%
      
.descripSVG
   col(8/12)
   
   +below(bpMedium)
      col(10/12)

   +below(bpSmall)
      padding:0px
      margin-top:0.65rem
      stack()

.vSpace
   margin-bottom:2rem

// content

// slick menu
.slicknav_menu
   display:none
    
   +below(bpSmall)
      position:fixed
      display:block
      width:100%
 
      .slicknav_btn
         float:left
         background:transparent
    
+below(bpSmall)
 
   .js #menu
      display:none
 
   .js .slicknav_menu
      display:block


#bluestrip
   width: 20px
   height: 100%
   background: blueLight
   position:fixed
   top:0px
   z-index: 300
   +below(bpSmall)
      display:none
 
#greyContainer, #whiteContainer
   padding:0px
   margin:0px
   padding-left: containerMarginLeftXL
   padding-right: containerMarginRightXL
   padding-bottom: 1.3rem
   width: containerWidth
   overflow:hidden
   
   +below(bpMedium)
      // padding-left: containerMarginLeftL
      // padding-right: containerMarginRightL
      width: "calc(100% - %s)" % containerMargins 
      background-color:red

    
   +below(bpSmall)
      padding-top: 20px
      padding-left: containerMarginLeftS
      padding-right: containerMarginRightS
      width: "calc(100% - %s)" % containerMarginsS
      background-color:magenta
   

#greyContainer
   background-color: greyUltraLight

   
   #topBanner
      
      padding-top:35px
      +below(bpSmall)
         // height of the slicknav_menu
         padding-top:49px
      
      left
         col(8/12)
         
         +below(bpSmall)
               col(12/12)

      right
         col(4/12)
         
         +below(bpSmall)
            col(0/12)
      
         ul
            reset-list()
            inline-list: 15 px
            float:right
            font-weight:400
            color: blueDark
         
         a
            color: blueDark
            text-decoration:none
            transition: color 0.25s ease-in-out;
          
         a:hover
            color: greyMedium

   #metaNav
      
      padding-top:85px
      +below(bpSmall)
         padding-top:45px
      
      col(1)
   
   #projectDescript
      
      #header
         col(1)
   
      #description
         
         left
            col(6/12)
            
            +below(bpMedium)
               col(7/12)
            +below(bpSmall)
               stack()
            
         right
            col(5/12)
            
            +below(bpMedium)
               col(5/12)
            +below(bpSmall)
               stack()

            ul.process
               font-style: italic
               list-style-type:none
                
               li:before
                  content: "\2192"
                  margin-right:7px
                  list-style-position: inside

            ul.press
               margin-left: 1.35rem
               list-style-type:circle
               list-style-position: outside
  
               li
                  a
                     color: greyDark
                     transition: color 0.25s ease-in-out;
                   
                  a:hover
                     color: blueDark

#whiteContainer
   background-color: white

   
   #subNav
      col(1)
      
      padding-top: 1.3rem*2
      margin-bottom: 1.3rem
      
      +below(bpSmall)
          padding-top: 0px
      
      ul.more
         list-style-type:none
         margin-bottom:20px
         padding-bottom:0px
         padding-top:0.325rem

         +below(bpSmall)
            padding-top:0px
            background-color:blueLight
            border-radius: 4px
         
         li
            // line-height:1.6rem
            
            +below(bpSmall)
               padding-top: 18px
               padding-bottom: 18px
               padding-left:18px
               border-bottom: 1px dashed white
               
         li:last-child
               +below(bpSmall)
                  border-bottom: 0px
               
            a
               color: blueDark
               text-decoration:none
               transition: color 0.25s ease-in-out;
                  
            a:hover
               color: greyDark
   
         li:before
            color: blueDark
            content: "\21e3"
            margin-right:7px
            list-style-position: inside              
            
   .rubric
      col(1)
      
      .contentBox
         col(1)
         
         left
            col(7/12)
            padding-top:0.65rem
            
            +below(bpMedium)
               col(7/12)
            +below(bpSmall)
               stack()

      right
         col(6/12)
         
         +below(bpMedium)
            col(5/12)
         +below(bpSmall)
            stack()
      
      // shift the anchor in order to compensate the size of the mobile fixed menu
      a.anchor
         +below(bpSmall)
            display: block;
            position: relative;
            top: -50px;
            visibility: hidden;





