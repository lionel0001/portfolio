@import '_settings'
@import 'jeet'

normalize-css()
base()
// edit(red)

projectBoxWidth = 466px
projectBoxHeight = 250px

containerMarginLeftXL = 100px
containerMarginRightXL = 100px

containerMarginLeftL = 60px
containerMarginRightL = 60px
containerMargins = containerMarginLeftL  + containerMarginRightL
txtMediumCopy = 0.9375rem

containerMarginLeftS = 20px
containerMarginRightS = 20px
containerMarginsS = containerMarginLeftS + containerMarginRightS
txtSmallCopy = 0.875rem
// txtSmallLineHeigh = 

containerWidth = 960px

bpMedium = containerMarginLeftXL + containerMarginRightXL + containerWidth
bpSmall = 600px


bgcolor = #ECECEC
greyDark = #424242
greyMedium = #767676
greyLight = #9E9E9E
greyUltraLight = #ECECEC

greyBorder = #BDBDBD
greyText = #555


blueDark = #488FC7
blueLight = #C1DEFF

*
   padding:0px
   margin:0px

body
   background-color: #969696   
   font-family: fira
   color: greyText
   
   -webkit-font-smoothing: antialiased
   -moz-osx-font-smoothing: grayscale
   
   +below(bpMedium)
      font-size: txtMediumCopy

   +below(bpSmall)
      font-size: txtSmallCopy

p
   font-weight:400
   line-height: 1.3rem
   margin-bottom: 1.3rem
 
   .inlineTitle
      font-weight:500

a
   color: greyText
   text-decoration:underline
       
a:hover
   color: blueDark   


ul
   padding-bottom:1.3rem

   li
      line-height:1.3rem

 
h1
   font-size: 1.75rem
   margin:0px
   font-weight:400
   color: greyDark
   
   +below(bpSmall)
      font-size: 1.5rem
      line-height:1.9rem
      padding: 5px 0px   


h2
   font-size: 1.5rem
   margin:0px
   font-weight:400
   color: greyDark
   
   // +below(bpSmall)
   line-height:1.9rem
   padding-top: 1.3rem 
   padding-bottom: 1.3rem
   
// h2:before
//    content: "\2013"
//    margin-right:10px

   
   


h3
   font-size: 1rem
   font-weight:400
   color: greyDark
   line-height: 1.65rem
    
   +below(bpSmall)
      line-height:1.3rem
    
   .bold
      font-weight:500

   .slogan
      font-weight:400
      white-space: nowrap
      
      +below(bpSmall)
         white-space: normal
    
   .status
      font-weight:400
      color: greyMedium
    
   .blue
      font-weight:400
      color: blueDark
    
   .projectSubtitle
      font-weight:400
      font-style:italic
      color: greyMedium

   .projectYear
      font-weight:400
      color: greyLight

h4
   font-weight:500
   line-height: 1.3rem
   
   .onlyMobile 
      display:block
      +below(bpSmall)
         display:none
         
   .borderTop
      +below(bpSmall)
         display:block
         margin-top:5px
         padding-top:5px
         border-top: 1px solid greyDark
      
.basicRespImage
   // width:100%
   +below(bpMedium)
      width:90%
   +below(bpSmall)
      width:100%
      
.descripSVG
   col(7/12)
   padding:1.3rem
   
   +below(bpMedium)
      col(10/12)

   +below(bpSmall)
      padding:0px
      margin-top:0.65rem
      stack()
        
.spacePad-1
   padding:1rem


.spacePadBot-0-05
   padding-bottom:0.65rem
   
.spacePadBot-2
   padding-bottom:2rem
   
.spacePadTop-2
   padding-top:2rem  

.spaceMargTop-0-65
   margin-top:.65rem  

.spaceMargBot-0-65
   margin-bottom:.65rem  

.spaceMargTop-2
   margin-top:2rem  
   
.spaceMargBot-2
   margin-bottom:2rem  





.borderLeft
   border-left: 1px solid greyBorder
   padding-left: 1rem
   display:block
   
   +below(bpSmall)
      padding-left: 0.5rem
   

.borderLeftNarrow
   border-left: 1px solid greyBorder
   padding-left: 0.5rem
   display:block

.dashed
   border-left: 1px dashed greyBorder
   +below(bpSmall)
      border:none
      padding-left: 0rem


.vertSpace75
   height:75px
   display:block


.noMargin
   margin:0px
   
// video content
.vimeoContent
   +below(bpSmall)
      width:100%
      height: "calc(0.95*(100vw - %s))" % containerMargins 

// shadow compensation
p.shadowTopCompensation
   margin-bottom:0.35rem


.imgShiftshadowLeft
   position:relative
   left:-15px
   margin-top:0.35rem
   clear:both
   
   +below(bpSmall)
      left:-5px




// content
// specific css
 
// home               
.bgImg-helen
   bg: '/img/street-cut.jpg'
    
.bgImg-knowledge
   bg: '/img/street.jpg'
 
.bgImg-geolinguistic
   bg: '/img/street.jpg'
            
.bgImg-urbanweave
   bg: '/img/street.jpg' 



// slick menu
.slicknav_menu
   display:none
    
   +below(bpSmall)
      position:fixed
      z-index:310
      display:block
      width:100%
      // background-color:blueLight
         
      ul.slicknav_nav
         
         li.projectHead   
            padding-left:30px

         li.projectElement   
            padding-left:30px
            
            a
               color:greyLight      

 
      .slicknav_btn
         float:left
         background:transparent
    
+below(bpSmall)
 
   .js #menu
      display:none
 
   .js .slicknav_menu
      display:block


#bluestrip
   width: 20px
   height: 100%
   background: blueLight
   position:fixed
   top:0px
   z-index: 300
   +below(bpSmall)
      display:none
 
#greyContainer, #whiteContainer
   padding:0px
   margin:0px
   padding-left: containerMarginLeftXL
   padding-right: containerMarginRightXL
   padding-bottom: 1.3rem
   width: containerWidth
   overflow:hidden
   
   +below(bpMedium)
      padding-left: containerMarginLeftL
      padding-right: containerMarginRightL
      width: "calc(100% - %s)" % containerMargins 
      background-color:red

    
   +below(bpSmall)
      padding-top: 20px
      padding-left: containerMarginLeftS
      padding-right: containerMarginRightS
      width: "calc(100% - %s)" % containerMarginsS
      background-color:magenta
   

#greyContainer
   background-color: greyUltraLight

   
   #topBanner
      
      padding-top:35px
      +below(bpSmall)
         // height of the slicknav_menu
         padding-top:49px
      
      left
         span(19/24)
         
         +below(bpMedium)
            span(9/12)
         
         +below(bpSmall)
            span(12/12)

      right
         span(5/24)
         
         +below(bpMedium)
            span(3/12)
         
         +below(bpSmall)
            span(0/12)
      
         ul
            reset-list()
            inline-list: 15 px
            float:right
            font-weight:400
            color: blueDark
            
            li.projectHead, li.projectElement
               display:none

         
         a
            color: blueDark
            text-decoration:none
            transition: color 0.25s ease-in-out;
          
         a:hover
            color: greyMedium

   
   #hello
      col(1)
      
      +below(bpMedium)
         span(9/12)
      
      +below(bpSmall)
         span(12/12)
         padding-top:0.65rem 

         
      
      

   #metaNav
      
      padding-top:85px
      +below(bpSmall)
         padding-top:45px
      
      a
         color: blueDark
         text-decoration:none
             
      a:hover
         color: greyDark   

      col(1)
   
   #projectDescript
      
      #header
         col(1)
         
         
         .projectImage
            shift (0)
            padding: 1.3rem 0
            left:0px
            
            +below(bpMedium)
               padding: 1rem 0
            +below(bpSmall)
               padding: 0.65rem 0
               
         .projectVideo
            
            col(12/12)
            
            padding: 1.3rem 0
            // background-color: red
            
            +below(bpMedium)
               col(12/12)
               padding: 1rem 0
            +below(bpSmall)
               column(1)
               padding: 0.65rem 0
            
               
         .shiftshadow
             left:-15px

            

      #description
         
         left
            col(6/12)
            
            +below(bpMedium)
               col(7/12)
            +below(bpSmall)
               stack()
            
         right
            col(4/12)
            
            +below(bpMedium)
               col(5/12)
            +below(bpSmall)
               stack()

            ul.process
               font-style: italic
               list-style-type:none
                
               li:before
                  content: "\2192"
                  margin-right:7px
                  list-style-position: inside

            ul.press
               margin-left: 1.35rem
               list-style-type:circle
               list-style-position: outside
  
               li
                  a
                     color: greyDark
                     transition: color 0.25s ease-in-out;
                   
                  a:hover
                     color: blueDark


   #projects
       
      .project
         col(1/2, cycle:2)
         height: projectBoxHeight
         margin-bottom: 20px
          
         +below(bpSmall)
            stack()

         a
            text-decoration:none
                      
            .box
               opacity: 1;
               cursor: auto;
               display: block;
               height: projectBoxHeight
             
               .veil
                  // background-color:green
                  opacity:0
                  width: 50px
                  height:projectBoxHeight
                  position:absolute
                  z-index:0
                  transition: all 0.25s ease-in-out;
                  
               h1
                  font-size: 1.125 rem
                  font-weight: 500
                  margin:0
                  padding:0
                  color: greyDark
                  position:relative
                  z-index: 10
                  padding-left:15px
                  padding-right:15px
                  padding-top:15px
                  transition: all 0.25s ease-in-out;
                   
               h2
                  font-size: 0.875 rem
                  font-weight: 400
                  font-style: italic
                  margin:0
                  padding:0
                  color: greyMedium
                  position:relative
                  z-index: 10
                  padding-left:15px
                  padding-right:15px
                  transition: all 0.25s ease-in-out;
                   
                  .moreInfo
                     color:greyLight
                  
         a:hover
             
            .box
                
               .veil
                  opacity:0.9
                  background-color:greyDark
                
               h1, h2
                  color: greyLight                   

#whiteContainer
   background-color: white

   
   #subNav
      col(1)
      
      padding-top: 1.3rem*2
      margin-bottom: 1.3rem
      
      +below(bpSmall)
          padding-top: 0px
      
      ul.more
         list-style-type:none
         margin-bottom:0px
         padding-bottom:0px
         padding-top:0.325rem

         +below(bpSmall)
            padding-top:0px
            background-color:blueLight
            border-radius: 4px
         
         li
            // line-height:1.6rem
            
            +below(bpSmall)
               padding-top: 18px
               padding-bottom: 18px
               padding-left:18px
               border-bottom: 1px dashed white
               
         li:last-child
               +below(bpSmall)
                  border-bottom: 0px
               
            a
               color: blueDark
               text-decoration:none
               transition: color 0.25s ease-in-out;
                  
            a:hover
               color: greyDark
   
         li:before
            color: blueDark
            content: "\21e3"
            margin-right:7px
            list-style-position: inside              
            
   .rubric
      col(1)
      // border-top: 1px solid greyLight
      
      .contentBox
         col(1)
         
         .single
            col(7/12)
            // padding-top:0.65rem
            
            +below(bpMedium)
               col(7/12)
            +below(bpSmall)
               stack()
         
         left
            col(3/12)
            
            +below(bpMedium)
               col(4/12)
            +below(bpSmall)
               stack()
            
         right
            col(9/12)
            
            img
               width:100%
            
            +below(bpMedium)
               col(8/12)
            +below(bpSmall)
               stack()

         .box50
            col(6/12)
               
            +below(bpSmall)
               stack()
               
         .full
            col(1)
            margin-left:auto
            margin-right:auto
         
         .left-10-12
            col(10/12)

         .left-9-12
            col(9/12)            
         
         .left-8-12
            col(8/12) 
            
            +below(bpMedium)
               col(10/12)   
            
            +below(bpSmall)
               stack()    
            


         .box50
         .single
         .full           
            img.scale-resize
               width:80%
               display:block
               margin-left:auto
               margin-right:auto
               +below(bpSmall)
                  width:80%
                  // margin-bottom:2rem
            img.scale-resize-halfed
               width:50%
               +below(bpSmall)
                  width:100%
            img.goLeft
               margin-left:60px
               +below(bpSmall)
                  margin-left:0px


      
      // shift the anchor in order to compensate the size of the mobile fixed menu
      a.anchor
         +below(bpSmall)
            display: block;
            position: relative;
            top: -50px;
            visibility: hidden;





