@import '_settings'
@import 'jeet'

normalize-css()
base()
// edit(grey)

projectBoxWidth = 466px
projectBoxHeight = 250px

containerMarginLeftXL = 60px
containerMarginRightXL = 40px

containerMarginLeftL = 60px
containerMarginRightL = 40px
containerMargins = containerMarginLeftL  + containerMarginRightL

containerMarginLeftS = 20px
containerMarginRightS = 20px
containerMarginsS = containerMarginLeftS + containerMarginRightS
txtSmallCopy = 0.875rem

containerWidth = 1060px
// containerWidth = 960px

bpMedium = containerMarginLeftXL + containerMarginRightXL + containerWidth
bpSmall = 600px


bgcolor = #ECECEC
greyDark = #424242
greyMedium = #767676
greyLight = #9E9E9E
blueDark = #488FC7
blueLight = #C1DEFF


body
   background: bgcolor   
   font-family: fira
   
   -webkit-font-smoothing: antialiased
   -moz-osx-font-smoothing: grayscale
   
   +below(bpSmall)
      font-size: txtSmallCopy

   

.vertSpace75
   height:75px
   display:block

// Slicknav

.slicknav_menu
   display:none
   
   
   +below(bpSmall)

      .slicknav_btn
         float:left
         background:transparent
   
+below(bpSmall)

   // font-size: txtSmallCopy

   .js #menu
      display:none

   .js .slicknav_menu
      display:block



// blue strip

   #bluestrip
      width: 20px
      height: 100%
      background: blueLight
      position:fixed
      top:0px
      z-index: 300
      +below(bpSmall)
         display:none

// content

   #container
      padding-top: 0px
      margin-top: 0px
      margin-left: containerMarginLeftXL
      margin-right: containerMarginRightXL
      width: containerWidth
      
      +below(bpMedium)
         margin-left: containerMarginLeftL
         padding-right: containerMarginRightL
         width: "calc(100% - %s)" % containerMargins   
      
      +below(bpSmall)
         // padding-top: 20px
         margin-left: containerMarginLeftS
         margin-right: 0
         padding-right: containerMarginRightS
         width: "calc(100% - %s)" % containerMarginsS 
      
      h3
         font-size: 1rem
         font-weight:400
         color: greyDark
         margin:0px
         padding:0px
         line-height: 1.5625rem
         
         +below(bpSmall)
            line-height:1.3rem
         
         .bold
            font-weight:500

         .slogan
            font-weight:400
            font-style:italic
            // display:inline-block
         
         .status
            font-weight:400
            color: greyMedium
         
         .blue
            font-weight:400
            color: blueDark
         
         .projectSubtitle
            font-weight:400
            font-style:italic
            color: greyMedium

         .projectYear
            font-weight:400
            color: greyLight


         a
            color: blueDark
            text-decoration:none
            transition: color 0.25s ease-in-out;
               
         a:hover
            color: greyMedium
         
         +below(bpSmall)
            font-size: txtSmallCopy
            
      h1
         font-size: 1.5rem
         font-weight:400
         color: greyDark
         margin:0px
         padding:0px
         
         +below(bpSmall)
            line-height:1.75rem
            margin-bottom: 4px




      #topBanner
         
         display:block
         margin-top:35px

         left
            col(8/12)
               
            +below(bpSmall)
               col(12/12)
            
         right
            col(4/12)
            
            +below(bpSmall)
               // display:none
               col(0/12)

            ul
               reset-list()
               inline-list: 15 px
               float:right
               font-weight:400
               color: blueDark
               
               +below(bpMedium)
                  inline-list: 15 px
            
               a
                  color: blueDark
                  text-decoration:none
                  transition: color 0.25s ease-in-out;
               
               a:hover
                  color: greyMedium
        
      #metaNav
         display:block

         left
            col(12/12)
            // margin-top:25px
            margin-bottom:15px

         // right
         //    col(4/12)

      
      #projectDescript
         display:block
         
         h4
            font-weight:500
            line-height: 1.3rem
            margin: 0px
            
         
         p
            font-weight:400
            line-height: 1.3rem
            margin-top:0
         
            .inlineTitle
               font-weight:500

         a
            color: greyDark
            transition: color 0.25s ease-in-out;
         
         a:hover
            color: blueDark

         #upperPart
            col(1)

            picture
               img.topImage
                  margin-top: 15px
                  +below(bpMedium)
                     width:90%
                  +below(bpSmall)
                     width:100%
        
         #description
            
            h4
               +below(bpSmall)
                  margin-top:5px
                  padding-top:5px
                  border-top: 1px solid greyDark
            
            h4,p,ul
               color:greyDark    

            left
            right
               margin-top: 1.5rem
               
               +below(bpSmall)
                  margin:0px
               

            left
               col(6/12)
 
               ul
                  reset-list()
                  
               +below(bpSmall)
                  stack()
                  padding-top: 1rem
                   
            right
               col(6/12)
               // color:greyMedium
               
               ul.process
                  reset-list()
                  margin-bottom:1rem
                  
                  li:before
                     content: "\2192"
                     margin-right:7px
                     list-style-position: inside
                   


               ul.press
                  margin-bottom:1rem
                  margin-left: -1rem
                  margin-top: 0px
                  list-style-type:circle

                  
                  li:before
                     list-style-position: outside
                     
                  li
                     a
                        color: greyDark
                        transition: color 0.25s ease-in-out;
                     
                     a:hover
                        color: blueDark
            
               +below(bpSmall)
                  stack()
                  
         // #more
            


      #projects
         
         .project
            col(1/2, cycle:2)
            height: projectBoxHeight
            margin-bottom: 20px
            
            +below(bpSmall)
               stack()
               //max-width: 500px
               //display:table
                    
            a
               text-decoration:none
                        
               .box
                  opacity: 1;
                  cursor: auto;
                  display: block;
                  height: projectBoxHeight
               
                  .veil
                     // background-color:green
                     opacity:0
                     width: 50px
                     height:projectBoxHeight
                     position:absolute
                     z-index:0
                     transition: all 0.25s ease-in-out;

                  h1
                     font-size: 1.125 rem
                     font-weight: 500
                     margin:0
                     padding:0
                     color: greyDark
                     position:relative
                     z-index: 10
                     padding-left:15px
                     padding-right:15px
                     padding-top:15px
                     transition: all 0.25s ease-in-out;
                     
                  h2
                     font-size: 0.875 rem
                     font-weight: 400
                     font-style: italic
                     margin:0
                     padding:0
                     color: greyMedium
                     position:relative
                     z-index: 10
                     padding-left:15px
                     padding-right:15px
                     transition: all 0.25s ease-in-out;
                     
                     .moreInfo
                        color:greyLight
                             
            a:hover
               
               .box
                  
                  .veil
                     opacity:0.9
                     background-color:greyDark
                  
                  h1, h2
                     color: greyLight


