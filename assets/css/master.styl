@import '_settings'
@import 'jeet'

normalize-css()
base()
// edit(grey)

threshold = 640px

bgcolor = #ECECEC
greyDark = #424242
greyMedium = #767676
greyLight = #D2D2D2

projectBoxHeight = 250px

body
	background: bgcolor
	font-family: fira
	

	#container
		
		center(960px)
		
		#topBanner
			left
				col(9/12)
			right
				col(3/12)
				
		#metaNav
			left
				col(9/12)		
			right
				col(3/12)
		
		#projects
			.project
				col(1/2, cycle:2, gutter: 2)
				display: block
				box-sizing: border-box
				margin-bottom: 20px
				
					
h1
	font-size: 1.125 rem
	font-weight: 500
	margin:0
	padding:0
	color: greyDark
	
h2
	font-size: 0.875 rem
	font-weight: 400
	font-style: italic
	margin:0
	padding:0
	color: greyDark
	text-decoration: none

						
.pad15
	padding: pad = 15px
	bg: '/img/street-cut.jpg'
	height:projectBoxHeight - pad*2
	





