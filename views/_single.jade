doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='description of your site')
    meta(name='author', content= "author of the site")
    //- uncomment if your site is responsive!
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= _path
    != css('/')

  body
    
    header
        h1= post.title
        h4 by #{post.author}

    #main
        article
            if post.process
                p= 'process: '+post.process

            if post.supervisionFH 
                p= 'supervised by: '+post.process+' at '+ a(href="http://www.fh-potsdam.de/studieren/design/?0='A%3D0'")FH Potsdam

            block presentation
        nav
            block details
        aside
            p aside

    footer
        p footer


        
    


    != js('/')