doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='description of your site')
    meta(name='author', content= "author of the site")
    //- uncomment if your site is responsive!
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= _path

    != css('/')

  body
    
    header
        h1= post.title
        h4 by #{post.author}

    #main
        article
            if post.process
                p= 'Process: '+post.process

            if post.supervisionFH 
                p= 'supervised by: '+post.process+' at '
                    a(href='http://www.fh-potsdam.de') University of Appliance Potsdam, Germany

            if post.press
                p Presented at:
                ul
                    each val in post.press
                        li  
                            a(href=val[1])  #{val[0]}
            
            if post.more
                h5 More information
                ul
                    each val in post.more
                        li  
                            a(href=val[1])  #{val[0]}


            block presentation
        nav
            block details
        aside
            p aside

    footer
        p footer
    
    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')

    != js('/')